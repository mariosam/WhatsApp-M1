<?xml version="1.0"?>
<!--
/**
 * XML config
 * 
 * Set basic information to fields of this module.
 *
 * @author      MarioSAM <eu@mariosam.com.br>
 * @date        Jan, 2021
 * @version     1.0.0
 */
-->
<config>
    <!-- actual version of this module -->
    <modules>
        <MarioSAM_WhatsApp>
            <version>1.0.0</version>
        </MarioSAM_WhatsApp>
    </modules>
    <!-- configuration module class to this module -->
    <global>
        <blocks>
            <whatsapp>
                <class>MarioSAM_WhatsApp_Block</class>
            </whatsapp>
        </blocks>
        <helpers>
            <whatsapp>
                <class>MarioSAM_WhatsApp_Helper</class>
            </whatsapp>
        </helpers>
        <models>
             <whatsapp>
                <class>MarioSAM_WhatsApp_Model_Config_Source</class>
             </whatsapp>
        </models>
    </global>
    <default>
        <!-- Set default values for fields of this module -->
        <whatsapp>
            <whats_config>
                <enabled>0</enabled>
                <phone></phone>
                <button><![CDATA[Need a help?]]></button>
                <welcome></welcome>
                <url>0</url>
            </whats_config>
            <whats_display>
                <position>bottom-right</position>
                <device>all</device>
                <button>31D92B</button>
                <css></css>
                <js></js>
            </whats_display>
            <whats_next_version>
               <my_contact>eu@mariosam.com.br</my_contact>
            </whats_next_version>
       </whatsapp>
    </default>
    <frontend>
        <!-- Set the XML resposable for update the theme layout -->
        <layout>
            <updates>
                <whatsapp>
                    <file>mariosam_whatsapp.xml</file>
                </whatsapp>
            </updates>
        </layout>
        <!-- Call the CSV translation keys to frontend words -->
        <translate>
            <modules>
                <whatsapp>
                    <files>
                        <default>MarioSAM_WhatsApp.csv</default>
                    </files>
                </whatsapp>
            </modules>
        </translate>
    </frontend>
    <!-- Call the CSV translation keys to backend words -->
    <adminhtml>
        <translate>
            <modules>
                <whatsapp>
                    <files>
                        <default>MarioSAM_WhatsApp.csv</default>
                    </files>
                </whatsapp>
            </modules>
        </translate>
    </adminhtml>
</config>
